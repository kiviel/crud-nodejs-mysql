<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="btn-toolbar pull-right clearfix mb-2">
        <button class="btn btn-sm btn-primary" onclick="location.replace('/new')"><i class="fa fa-plus"></i>&nbsp;New</button>
      </div>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>nÂ°</td>
            <td>Name</td>
            <td>Address</td>
            <td>Phone</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].address %></td>
                <td><%= data[i].phone %></td>
                <td>
                  <a href="/update/<%= data[i].id %>" class="btn btn-sm btn-default" ><i class="fa fa-edit"></i></a>
                  <a href="/delete/<%= data[i].id %>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% include partials/_footer %>
